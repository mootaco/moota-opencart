{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button class="btn btn-primary" type="submit" form="form-total"
                        data-toggle="tooltip" title="{{ button_save }}"
                >
                    <i class="fa fa-save"></i>
                </button>

                <a class="btn btn-default" href="{{ cancel }}"
                   data-toggle="tooltip" title="{{ button_cancel }}"
                >
                    <i class="fa fa-reply"></i>
                </a>
            </div>

            <h1>{{ heading_title }}</h1>

            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li>
                        <a href="{{ breadcrumb.href }}"
                        >{{ breadcrumb.text }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible">
                <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button class="close" type="button" data-dismiss="alert"></button>
            </div>
        {% endif %}

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i> {{ text_edit }}
                </h3>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" action="{{ action }}"
                      method="post"
                      enctype="multipart/form-data"
                      id="form-total"
                >
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status"
                        >Status</label>

                        <div class="col-sm-10">
                            <select class="form-control"
                                    name="total_mootapay_status"
                                    required="required"
                                    id="input-status"
                            >
                                <option
                                        disabled="disabled"
                                    {% if total_mootapay_status == null %}
                                        selected="selected"
                                    {% endif %}
                                >-- Pilih Satu --</option>
                                <option value="0"
                                    {% if total_mootapay_status == 0 %}
                                        selected="selected"
                                    {% endif %}
                                >Disabled</option>
                                <option value="1"
                                    {% if total_mootapay_status == 1 %}
                                        selected="selected"
                                    {% endif %}
                                >Enabled</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="input-sort-order"
                        >Sort Order</label>

                        <div class="col-sm-10">
                            <input class="form-control" type="text"
                                   name="total_mootapay_sort_order"
                                   value="{{ total_mootapay_sort_order }}"
                                   placeholder="90 - 999"
                                   required="required"
                                   id="input-sort-order"
                            />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">&nbsp;</label>
                        <p class="col-sm-10">
                            Lihat <a href="{{ config_url }}"
                            >disini</a> untuk pengaturan Kode Unik.
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}
